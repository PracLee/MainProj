<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_handler_back"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="go back"
            android:paddingStart="35dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/icon_back_arrow" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_handler_time"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="center"
        android:text="- 0 -"
        android:textSize="25dp" />

    <Button
        android:id="@+id/btn_not_handler_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Non Handler Start" />

    <Button
        android:id="@+id/btn_handler_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Handler Start" />

    <Button
        android:id="@+id/btn_handler_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Handler Stop" />

    <Button
        android:id="@+id/btn_handler_delay_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Handler wait Start (3 second)" />

    <Button
        android:id="@+id/btn_handler_delay_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="handler wait stop" />

    <Button
        android:id="@+id/btn_timer_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="timer start" />

    <RadioGroup
        android:id="@+id/rg_timer"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_timer_wiget"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:checked="true"
            android:gravity="center"
            android:text="Use Widget post" />

        <RadioButton
            android:id="@+id/rb_timer_run"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Use RunOnUI" />

        <RadioButton
            android:id="@+id/rb_timer_handler"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Use Handler" />
    </RadioGroup>

    <Button
        android:id="@+id/btn_timer_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="timer stop" />
</LinearLayout>