<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ECECFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_prov_back"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="Go Back!"
            android:paddingStart="35dp"
            android:paddingTop="15dp"
            android:paddingBottom="15sp"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/icon_back_arrow" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_content"
        android:layout_width="match_parent"
        android:layout_height="400dp" />

    <Button
        android:id="@+id/btn_get_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="get Adress" />

    <Button
        android:id="@+id/btn_get_custom_provider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="get customprovider adress" />

</LinearLayout>