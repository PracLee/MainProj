<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_code_back"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:contentDescription="go back"
            android:paddingStart="35dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:scaleType="fitStart"
            app:srcCompat="@drawable/icon_back_arrow" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_res_code_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Result Code!" />

    <Button
        android:id="@+id/btn_res_param_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Parameter Send!" />

    <Button
        android:id="@+id/btn_req_code_send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Response Code For Request!" />

    <Button
        android:id="@+id/btn_code_move"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="to MainActivity" />

    <Button
        android:id="@+id/btn_custom_list_move"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To CustomList Activity" />

</LinearLayout>